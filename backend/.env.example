# ============================================================================
# NeighborGuard Backend - Environment Variables
# ============================================================================

# Server
PORT=3001
NODE_ENV=production

# Database - Railway PostgreSQL
DATABASE_URL="your-railway-postgres-url-here"

# JWT - CHANGE THESE IN PRODUCTION
JWT_SECRET="your-secure-jwt-secret-here"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Email (for development, codes are logged to console)
DEV_SKIP_EMAIL=true
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="NeighborGuard <noreply@neighborguard.app>"

# Auth
AUTH_CODE_EXPIRES_MINUTES=10
AUTH_CODE_MAX_ATTEMPTS=5

# Test Mode - Use fixed verification code for testing
AUTH_TEST_MODE=true
AUTH_TEST_CODE=587585

# Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=52428800

# Frontend URL (for CORS)
FRONTEND_URL="https://your-frontend-url.railway.app"

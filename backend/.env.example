# ============================================================================
# NeighborGuard Backend - Environment Variables
# ============================================================================
# 
# FOR LOCAL DEVELOPMENT: Copy this file to .env and fill in values
# FOR RAILWAY: Set these in Railway Dashboard -> Variables
#
# ============================================================================

# Server
PORT=3001
NODE_ENV=production

# Database - Railway PostgreSQL
# Local: Copy your Railway DATABASE_URL here
# Railway: Use ${{Postgres.DATABASE_URL}} reference
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT - CHANGE IN PRODUCTION
JWT_SECRET="your-secure-jwt-secret-minimum-32-chars"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Email (codes logged to console when DEV_SKIP_EMAIL=true)
DEV_SKIP_EMAIL=true
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="NeighborGuard <noreply@neighborguard.app>"

# Auth
AUTH_CODE_EXPIRES_MINUTES=10
AUTH_CODE_MAX_ATTEMPTS=5

# Test Mode - Fixed verification code for testing
# Set AUTH_TEST_MODE=false for production with real emails
AUTH_TEST_MODE=true
AUTH_TEST_CODE=587585

# Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=52428800

# Frontend URL (for CORS)
# Local: http://localhost:5173
# Railway: https://your-frontend.up.railway.app
FRONTEND_URL="http://localhost:5173"
